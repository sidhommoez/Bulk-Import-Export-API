# ===========================================
# Bulk Import/Export API - Environment Config
# ===========================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=v1

# Authentication
# API key(s) for protecting import/export endpoints
# Leave empty to disable authentication (development mode)
# Use comma-separated values for multiple keys
API_KEY=
# Example with multiple keys:
# API_KEY=key1-for-admin,key2-for-app,key3-for-partner

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=bulk_import_export
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true
# DATABASE_SSL=false

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 / LocalStack
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_BUCKET=bulk-import-export
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_FORCE_PATH_STYLE=true

# Job Processing
JOB_BATCH_SIZE=1000
JOB_CONCURRENCY=2
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=5000

# Export Settings
EXPORT_ROWS_PER_SECOND_TARGET=5000
EXPORT_STREAM_HIGHWATERMARK=16384

# Import Settings
IMPORT_MAX_FILE_SIZE_MB=500
IMPORT_ALLOWED_EXTENSIONS=json,ndjson,csv

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Swagger Documentation
# Set to 'true' to enable, 'false' to disable
# Defaults to enabled in non-production environments
SWAGGER_ENABLED=true
